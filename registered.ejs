<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eventify - College Event Management</title>
    <link rel="icon" type="image/png" href="logo.png">
    <link rel="stylesheet" href="dashboard.css">
    <link rel="stylesheet" href="style.css">
    
</head>
<body>

    <!-- Navbar -->
    <%- include('navbar', { userId: userId }) %>

    <!-- Main content -->
    <main id="main">
        <h1>Your Registered Events</h1>
        <% for (const [type, events] of Object.entries(groupedEvents)) { %>
            <div class="carousel-container">
                <h2><%= type %> Events</h2>
                <div class="carousel">
                    <% events.forEach(event => { %>
                        <div class="event-card">
                            <img src="<%= event.image || 'default.jpg' %>" alt="<%= event.name %>" class="event-image">
                            <div class="event-info">
                                <h3><%= event.title %></h3>
                                <p>Location: <%= event.venue %></p>
                                <p>Date: <%= event.date.toLocaleDateString() %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>
                <button class="arrow left-arrow">&lt;</button>
                <button class="arrow right-arrow">&gt;</button>
            </div>
        <% } %>
    </main>
   
    
    
    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2025 Eventify. All Rights Reserved.</p>
        </div>
    </footer>

    <script src="dashboard.js"></script>
    <script src="script.js"></script>
</body>
</html>
